<UserControl
    x:Class="FaceDetection.NameBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceDetection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="Box" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="10">
        <Viewbox Stretch="Uniform">
            <TextBlock x:Name="NameTextBlock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Viewbox>
        <ToolTipService.ToolTip>
            <ToolTip x:Name="ToolTip"/>
        </ToolTipService.ToolTip>
    </Grid>
</UserControl>
